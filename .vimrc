scriptencoding utf-8
set encoding=utf-8

syntax on
set autoindent
set hlsearch
set number
set guifont=Menlo

set cursorline
set cursorcolumn
set colorcolumn=72

color smyck
set guioptions=aAce
set columns=120
set wrap

set tabstop=2
set shiftwidth=2
set softtabstop=2
set noexpandtab

" enable mouse interaction in vim
if has ("mouse")
  set mouse=a
endif

